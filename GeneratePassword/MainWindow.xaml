        <TextBlock Text="Длина пароля: " FontSize="20" Width="150" Margin="10,10,432,201"  />
        <TextBox Name="tbNumPass" Height="30" Width="100" Margin="10,48,482,171"  />

        <TextBlock Text="Сгенерированный пароль: " FontSize="20" Width="260" Height="40" Margin="10,89,322,120"  />
